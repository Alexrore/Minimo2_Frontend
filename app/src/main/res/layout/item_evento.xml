<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgEvento"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/tvNombreEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Evento"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvFechasEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01/01/2024 - 05/01/2024"
            android:textSize="12sp"
            android:textColor="#555"/>

        <TextView
            android:id="@+id/tvDescEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n del evento..."
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/btnApuntarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apuntarse"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>